/* This code was taken from Netscapes JavaScript documentation at www.netscape.com

   Modified by BK on 02/14/96, Fixed on 3/27/96
*/

function MakeArray (n) {
   this.length = n;
   for (var i = 1; i <= n; i++)
      this[i] = 0;
   return this;
}

var gaszWelcMsgs;
var giMaxMsgs = 7;
gaszWelcMsgs = new MakeArray(giMaxMsgs);
gaszWelcMsgs[1] = "Velkomin(n) á heimasíðu mína";
gaszWelcMsgs[2] = "Welcome to my homepage";
gaszWelcMsgs[3] = "Velkomm til min hjemmeside";
gaszWelcMsgs[4] = "Begrüßen Sie zu meiner Heimat - Seite";
gaszWelcMsgs[5] = "Accueillez à ma page de la maison";
gaszWelcMsgs[6] = "Dé la bienvenida a mi página de la casa";
gaszWelcMsgs[7] = "Bienvenido a mi pagina personal";
/*Accolga cordialmente alla mia pagina della casa";*/

var nTimerID = null;
var fTimerRunning = false;
function stopclock (){
   if(fTimerRunning)
      clearTimeout(nTimerID);
   fTimerRunning = false;
}

function startclock () {
   // Make sure the clock is stopped
   stopclock();
   showtime(1);
}

function showtime (iIndex) {
   var now = new Date();

   var hours = now.getHours();
   var minutes = now.getMinutes();
   var seconds = now.getSeconds()
   var timeValue = "" + ((hours >12) ? hours -12 :hours)
   timeValue += ((minutes < 10) ? ":0" : ":") + minutes
   timeValue += ((seconds < 10) ? ":0" : ":") + seconds
   timeValue += (hours >= 12) ? " P.M." : " A.M."
   document.info.time.value = timeValue;

   var day = now.getDate();
   var month = now.getMonth() + 1;
   var year = now.getYear();
   var dateValue = " " + ((month < 10) ? "0" : "") + month;
   dateValue += ((day < 10) ? "/0" : "/") + day;
   dateValue += "/19" + year;
   document.info.date.value = dateValue;

   if ((seconds % 2) == 0) {
      document.info.welcomemsg.value = gaszWelcMsgs[iIndex];
      if (iIndex < giMaxMsgs)
         iIndex++;
      else iIndex = 1;
   }

   var cmd = "showtime(" + iIndex + ")";
   nTimerID = setTimeout(cmd,1000);
   fTimerRunning = true;
}

// -- End of JavaScript code -------------- -->
</SCRIPT>

